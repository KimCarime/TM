<configuration>
    <property name="EXT_FILES_DIR" value="${EXT_DIR:-/sdcard}/Android/data/${PACKAGE_NAME}"/>
    <timestamp key="bySecond" datePattern="yyyy-MM-dd_HH-mm-ss"/>

    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <pattern>%date{HH:mm:ss,SSS} | %5level in %logger{35} > %msg%n</pattern>
        </encoder>
        <tagEncoder>
            <pattern>TruckMix</pattern>
        </tagEncoder>
    </appender>

    <appender name="LOGS" class="ch.qos.logback.core.FileAppender">
        <file>${EXT_FILES_DIR}/logs/TruckMix-${bySecond}.txt</file>

        <encoder>
            <pattern>%date{YYYY-MM-dd HH:mm:ss.SSS} > %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="LOGCAT" />
        <appender-ref ref="LOGS" />
    </root>
</configuration>
