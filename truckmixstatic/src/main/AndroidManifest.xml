<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lafarge.truckmix.tmstatic" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SlumpCalculationActivity"
            android:label="@string/title_activity_slump_calculation" >
        </activity>
        <activity
            android:name=".ParametersCalculatorActivity"
            android:label="@string/title_activity_parameters_calculator" >
        </activity>
        <activity
            android:name=".ParametersTruckListActivity"
            android:label="@string/title_activity_parameters_truck_list" >
        </activity>
        <activity
            android:name=".ParametersTruckDetailsActivity"
            android:label="@string/title_activity_parameters_truck_details" >
        </activity>
    </application>

</manifest>
